<?xml version="1.0" encoding="utf-8"?>

<UIViewGroup xmlns:ui="http://schemas.android.com/apk/res-auto"
    ui:positionX="{ Binding Path:'posX' }"
    ui:positionY="{ Binding Path:'posY' }" >

    <UITextView
        ui:id="@+id/forecastId"
        ui:width="150.0"
        ui:height="10.0"
        ui:positionX="0.0"
        ui:positionY="40.0"
        ui:textSize="15.0"
        ui:text="{ Binding Path:'dailyDay' }" />

    <UITextView
        ui:width="100.0"
        ui:height="10.0"
        ui:positionX="0.0"
        ui:positionY="58.0"
        ui:textSize="12.0"
        ui:text="{ Binding Path:'dailyDate' }" />

    <UIImageView
        ui:width="16.0"
        ui:height='16.0'
        ui:positionX="150.0"
        ui:positionY="45.0"
        ui:src="{ Binding Path:'dailyImageSrc' }" />

    <UITextView
        ui:width="100.0"
        ui:height="10.0"
        ui:positionX="250.0"
        ui:positionY="45.0"
        ui:textSize="15.0"
        ui:text="{ Binding Path:'dailyTempMax' }" />

    <UITextView
        ui:width="100.0"
        ui:height="10.0"
        ui:positionX="285.0"
        ui:positionY="45.0"
        ui:alpha="0.7"
        ui:textSize="15.0"
        ui:text="{ Binding Path:'dailyTempMin' }" />
</UIViewGroup>